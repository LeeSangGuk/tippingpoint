	<mvc:view-controller path="/tpMyPage/modifyRegister.tp"
		view-name="tpMyPage/modifyRegister.tiles" />
	<!-- 로그인 페이지 -->
	<mvc:view-controller path="/tpLogin/tpLoginPage.tp"
